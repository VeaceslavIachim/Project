@model BundesligaWeb.ViewModels.StandingViewModel
   @{
        ViewData["Title"] = "Standings";
    }
   
   <div class="col-lg-9">
    <table class="table table-hover">
        <thead>
            <tr>
                <th></th>
                <th></th>
                <th>Team</th>
                <th>Games</th>
                <th>Goals</th>
                <th>Points</th>
            </tr>
        </thead>
        <tbody>

            @for (int i = 0; i < Model.Standings.Count; i++)
            {
                <tr onclick="window.location.href='@Url.Action("Team", "Teams", new {Id = @Model.Standings[i].Id })'; return false" style="cursor:pointer">
                    <td>@(i + 1)</td>
                    <td>
                        <img src="@Model.Standings[i].Photo" style="width:20px;height:20px" />
                    </td>
                    <td>
                        @Model.Standings[i].Team
                    </td>
                    <td>@Model.Standings[i].Games</td>
                    <td>@Model.Standings[i].Goals</td>
                    <td>@Model.Standings[i].Points</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="col-lg-3">
    @Html.Partial("Matches",Model.Matches)
    @Html.Partial("TopScorers",Model.TopScorers)
</div>



            
   
