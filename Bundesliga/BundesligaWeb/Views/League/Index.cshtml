@model IEnumerable<BundesligaWeb.ViewModels.LeagueViewModel>;
@{
    ViewData["Title"] = "Leagues";
}

<h2>Teams</h2>
<div class="teams-container">
    @foreach (var item in Model)
    {
        <a asp-controller="Standings" asp-action="Index" asp-route-id="@item.Id">
            <div class="row">
                <div class="col-md-3">
                    <img src="@item.Photo" alt="Photo" style="width:30px;height:30px">
                </div>
                <div class="col-md-6">
                    @item.Name
                </div>
                <div class="col-md-3">
                    @item.Country
                </div>
            </div>
        </a>
    }
</div>
