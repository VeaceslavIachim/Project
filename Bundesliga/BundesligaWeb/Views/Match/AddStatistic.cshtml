@model IList<BundesligaWeb.ViewModels.MatchStatisticsViewModel>

@{
    ViewData["Title"] = "AddStatistic";
}

<h2>AddStatistic</h2>

<h4>MatchStatisticsViewModel</h4>
<hr />
<div>
    <div class="col-md-12">
        <form asp-action="AddStatistic" class="form-inline">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h2>Home Team Statistic</h2>
            @for (int i = 0; i < 14; i++)
            {
                <input type="hidden" asp-for="@Model[i].MatchId" />
                <div class="row">
                    <div class="form-group col-md-2">
                        <label asp-for="@Model[i].PlayerId" class="col-md-2"></label>
                        <div>
                            <select asp-for="@Model[i].PlayerId" asp-items="@Model[i].HomePlayers">
                                <option value="none"></option>
                            </select>
                            <span asp-validation-for="@Model[i].PlayerId" class="text-danger"></span>

                        </div>
                    </div>
                    
                    <div class="form-group ">
                        <label asp-for="@Model[i].GoalsScored"></label>
                        <div>
                            <input asp-for="@Model[i].GoalsScored" class="input-number" />
                            <span asp-validation-for="@Model[i].GoalsScored" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group ">
                        <label asp-for="@Model[i].MinutesPlayed"></label>
                        <div>
                            <input asp-for="@Model[i].MinutesPlayed" class="input-number" />
                            <span asp-validation-for="@Model[i].MinutesPlayed" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model[i].YellowCards"></label>
                        <div>
                            <input asp-for="@Model[i].YellowCards" class="input-number" />
                            <span asp-validation-for="@Model[i].YellowCards" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group ">
                        <label asp-for="@Model[i].RedCards"></label>
                        <div>
                            <input asp-for="@Model[i].RedCards" class="input-number" />
                            <span asp-validation-for="@Model[i].RedCards" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model[i].TotalPasses"></label>
                        <div>
                            <input asp-for="@Model[i].TotalPasses" class="input-number" />
                            <span asp-validation-for="@Model[i].TotalPasses" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group ">
                        <label asp-for="@Model[i].SuccesfullPasses"></label>
                        <div>
                            <input asp-for="@Model[i].SuccesfullPasses" class="input-number" />
                            <span asp-validation-for="@Model[i].SuccesfullPasses" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            }
            <h2>Away Team Statistic</h2>
            @for (int i = 14; i < 28; i++)
            {
                <div class="row">
                    <div class="form-group col-md-2">
                        <label asp-for="@Model[i].PlayerId" class="col-md-2"></label>
                        <div>
                            <select asp-for="@Model[i].PlayerId" asp-items="@Model[i].AwayPlayers">
                                <option value="none"></option>
                            </select>
                            <span asp-validation-for="@Model[i].PlayerId" class="text-danger"></span>

                        </div>
                    </div>


                    <div class="form-group ">
                        <label asp-for="@Model[i].GoalsScored"></label>
                        <div>
                            <input asp-for="@Model[i].GoalsScored" class="input-number" />
                            <span asp-validation-for="@Model[i].GoalsScored" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group ">
                        <label asp-for="@Model[i].MinutesPlayed"></label>
                        <div>
                            <input asp-for="@Model[i].MinutesPlayed" class="input-number" />
                            <span asp-validation-for="@Model[i].MinutesPlayed" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model[i].YellowCards"></label>
                        <div>
                            <input asp-for="@Model[i].YellowCards" class="input-number" />
                            <span asp-validation-for="@Model[i].YellowCards" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group ">
                        <label asp-for="@Model[i].RedCards"></label>
                        <div>
                            <input asp-for="@Model[i].RedCards" class="input-number" />
                            <span asp-validation-for="@Model[i].RedCards" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model[i].TotalPasses"></label>
                        <div>
                            <input asp-for="@Model[i].TotalPasses" class="input-number" />
                            <span asp-validation-for="@Model[i].TotalPasses" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group ">
                        <label asp-for="@Model[i].SuccesfullPasses"></label>
                        <div>
                            <input asp-for="@Model[i].SuccesfullPasses" class="input-number" />
                            <span asp-validation-for="@Model[i].SuccesfullPasses" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            }
    
            <div class="form-group" style="padding:5px">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
            </form>
               
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

