@model BundesligaWeb.ViewModels.MatchViewModel

@{
    ViewData["Title"] = "MatchViewModel";
}


    <div class="form-horizontal">
       
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="HomeTeamId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select id="Home" class="form-control" asp-for="HomeTeamId" asp-items="@Model.Teams">
                    <option value="none"></option>
                </select>
                <span asp-validation-for="HomeTeamId" class="text-danger"></span>

            </div>
        </div>
        <div class="form-group">
            <label asp-for="AwayTeamId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select class="form-control" asp-for="AwayTeamId" asp-items="@Model.Teams">
                    <option value="none"></option>
                </select>
                <span asp-validation-for="AwayTeamId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MatchDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="MatchDate" id="datepicker" class="form-control" />
                <span asp-validation-for="MatchDate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="HomeTeamScore" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input id="select" asp-for="HomeTeamScore" class="form-control" />
                <span asp-validation-for="HomeTeamScore" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AwayTeamScore" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input id="select" asp-for="AwayTeamScore" class="form-control" />
                <span asp-validation-for="AwayTeamScore" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
                <a asp-action="Index" asp-controller="Home" class="btn btn-default">Cancel</a>
            </div>
        </div>
    </div>


<div>
   
    <a asp-action="Index">Back to List</a>
</div>

